<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="001-create-eleve-table" author="ecole">
        <createTable tableName="eleve">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="postnom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="prenom" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="sexe" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="date_naissance" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="lieu_naissance" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="numero_permanent" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="classe" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="ecole" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="ville" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="commune_territoire" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="idx_eleve_numero_permanent" tableName="eleve">
            <column name="numero_permanent"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

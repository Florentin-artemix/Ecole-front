<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="006-add-professeur-to-cours" author="ecole">
        <addColumn tableName="cours">
            <column name="professeur_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <addForeignKeyConstraint
                baseTableName="cours"
                baseColumnNames="professeur_id"
                referencedTableName="utilisateur"
                referencedColumnNames="id"
                constraintName="fk_cours_professeur"/>
        
        <createIndex indexName="idx_cours_professeur" tableName="cours">
            <column name="professeur_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

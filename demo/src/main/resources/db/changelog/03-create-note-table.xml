<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="003-create-note-table" author="ecole">
        <createTable tableName="note">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="eleve_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="cours_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="valeur" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="periode" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="note"
                baseColumnNames="eleve_id"
                referencedTableName="eleve"
                referencedColumnNames="id"
                constraintName="fk_note_eleve"/>
        
        <addForeignKeyConstraint
                baseTableName="note"
                baseColumnNames="cours_id"
                referencedTableName="cours"
                referencedColumnNames="id"
                constraintName="fk_note_cours"/>
        
        <createIndex indexName="idx_note_eleve_periode" tableName="note">
            <column name="eleve_id"/>
            <column name="periode"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
